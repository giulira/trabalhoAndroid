        <activity android:name=".NovoCardapioActivity" />
        <activity android:name=".ListarCardapioActivity" />
        <activity android:name=".EncerrarActivity" />
        <activity android:name=".MostrarEditarDeletarActivity" />
        <activity android:name=".EditarActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity"></activity>

    </application>

</manifest>